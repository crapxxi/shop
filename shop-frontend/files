        <Link className="text-sm text-muted-foreground hover:text-foreground" href="/contact">Контакты</Link>
        {/* Other links */}
      </nav>

      {/* Mobile menu */}
      <div className="md:hidden">
        <DropdownMenuItem asChild>
          <Link href="/about">О нас</Link>
        </DropdownMenuItem>
        <DropdownMenuItem asChild>
          <Link href="/contact">Контакты</Link>
        </DropdownMenuItem>
        {/* Other menu items */}
      </div>
    </div>
